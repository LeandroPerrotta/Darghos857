<?xml version="1.0"?>
<npc name="Oldrak" floorchange="0" walkinterval="2000" speed="220">
	<health now="150" max="150"/>
	<look type="57" head="78" body="57" legs="58" feet="80" addons="3"/>
  
  <interaction range="4" idletime="0" defaultpublic="0">

	<include file="events_shop.xml"/>
    <include file="others.xml"/>
    
    <interact keywords="hi" focus="1">
      <keywords>hello</keywords>
      
      <response text="Hello. How may I help you |NAME|? Ask {trade}...."/>
    </interact>

    <interact keywords="bye" focus="0">
      <keywords>farewell</keywords>

      <response text="It was a pleasure to help you."/>
    </interact>

    <interact event="onPlayerLeave" focus="0">
      <response text="It was a pleasure to help you |NAME|."/>
    </interact>
    
    <interact keywords="name">
      <response text="My name is |NPCNAME|."/>
    </interact>

    <interact keywords="job">
      <response text="I am a old man....., my job is to serve you!"/>
    </interact>
	
	<interact keywords="trade">
		<list>oldrak</list>
		<response>
			<action name="script">
			<![CDATA[
			  openShopWindow(cid, itemlist, -1, -1)
			]]>
			</action>
		</response>
	</interact>
	



  </interaction>
  
</npc>